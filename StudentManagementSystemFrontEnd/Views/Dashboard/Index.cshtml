        <script>
            $(document).ready(function () {
                if (localStorage.getItem('token') == null) {
                    window.location.replace("https://localhost:5001/Login")
                }  
                var $studentTotal = $("#studentTotal")
                var $couseTotal = $("#courseTotal")
                var $subjectTotal = $("#subjectTotal")

                function loadStudent() {
                    $.ajax({
                        type: "GET",
                        url: "https://localhost:44380/api/v1/students",
                        headers: { 'Authorization': 'Bearer ' + localStorage.getItem('token') },
                        contentType: "application/json",
                        dataType: "json",
                        success: function (data) {
                            var total = data.length;
                            console.log(total);
                            $studentTotal.html(total)
                        },
                        error: function (data) {
                            if (data.status == "401") {
                                window.location.replace("https://localhost:5001/Login");
                            }
                        }
                    });
                }
                function loadCourse() {
                    $.ajax({
                        type: "GET",
                        url: "https://localhost:44380/api/v1/courses",
                        headers: { 'Authorization': 'Bearer ' + localStorage.getItem('token') },
                        contentType: "application/json",
                        dataType: "json",
                        success: function (data) {
                            var total = data.length;
                            console.log(total);
                            $couseTotal.html(total)
                        },
                        error: function (data) {
                            if (data.status == "401") {
                                window.location.replace("https://localhost:5001/Login");
                            }
                        }
                    });
                }
                function loadSubject() {
                    $.ajax({
                        type: "GET",
                        url: "https://localhost:44380/api/v1/subjects",
                        headers: { 'Authorization': 'Bearer ' + localStorage.getItem('token') },
                        contentType: "application/json",
                        dataType: "json",
                        success: function (data) {
                            var total = data.length;
                            console.log(total);
                            $subjectTotal.html(total)
                        },
                        error: function (data) {
                            if (data.status == "401") {
                                window.location.replace("https://localhost:5001/Login");
                            }
                        }
                    });
                }

                loadStudent();
                loadCourse();
                loadSubject();

                $('#btnLogout').on('click', function () {
                    localStorage.removeItem('token');
                    window.location.replace("https://localhost:5001/Login");
                })
            })
        </script>
