    <script>
        $(document).ready(function () {
            if (localStorage.getItem('token') == null) {
                window.location.replace("https://localhost:5001/Login")
            } 

            var courses = [];



            function tableList(data) {
                return data = "<tr data-id='" + data.courseId + "'>"
                    + "<td>" + data.loopID + "</td>"
                    + "<td class='txt-oflo'>" + data.name + "</td>"
                    + "<td>"
                    + "<div class='custom-control custom-checkbox'>"
                    + "<input class='form-check-input position-static' type='checkbox' id='blankCheckbox' value='option1' aria-label='...' data-id='" + data.courseId + "'>"
                    + "</div>"
                    + "</td>"
                    + "</tr>";
            }

            var $Table = $("#tableItems");
            var $btnDelete = $("#btnDelete");
            var $btnView = $("#btnView");
            var $form = $("#form");
            var $btnSearch = $("#btnSearch")
            var $spinner = $("#spinner");


            loadData();

            function loadData() {
                $spinner.prop("hidden", false);
                $.ajax({
                    type: "GET",
                    url: "https://localhost:44380/api/v1/courses",
                    headers: { 'Authorization': 'Bearer ' + localStorage.getItem('token') },
                    contentType: "application/json",
                    dataType: "json",
                    success: function (data) {
                        $spinner.prop("hidden", true);
                        console.log(data);

                        var modifyCourse = $.each(data, function (index, data) {
                            data.loopID = index + 1;

                        })
                        courses = modifyCourse;

                        $.each(courses, function (key, value) {

                            var data = tableList(value);
                            $Table.append(data);
                        });

                        $Table.find("input[type='checkbox']").on('click', function () {
                            if ($(this).prop("checked")) {
                                if ($("input[type='checkbox']:checked").length == 1) {
                                    $btnView.prop('disabled', false);
                                } else {
                                    $btnView.prop('disabled', true);
                                }
                                $btnDelete.prop('disabled', false);
                            } else {
                                console.log($("input[type='checkbox']:checked").length)
                                if ($("input[type='checkbox']:checked").length == 0) {
                                    $btnDelete.prop('disabled', true);
                                    $btnView.prop('disabled', true);
                                }
                                else if ($("input[type='checkbox']:checked").length == 1) {
                                    $btnView.prop('disabled', false);
                                }
                            }

                        })
                    },
                    error: function (data) {
                        if (data.status == "401") {
                            window.location.replace("https://localhost:5001/Login");
                        }
                        console.log('bad')
                    }
                });
            }
            function deleteCourse(data) {
                $.ajax({
                    type: "DELETE",
                    url: "https://localhost:44380/api/v1/courses/" + data,
                    headers: { 'Authorization': 'Bearer ' + localStorage.getItem('token') },
                    contentType: "application/json",
                    dataType: "json",
                    success: function (data) {
                        console.log(data);
                        //window.location.replace("https://localhost:5001/Dashboard/Course");
                    },
                    error: function (data) {
                        console.log(data)
                        alert("Server is off")
                        console.log('bad')
                    }
                });
            }

            $btnDelete.on("click", function (e) {
                e.preventDefault();
                var checked = $Table.find("input[type='checkbox']:checked");
                if (checked.length > 0) {
                    checked.each(function () {
                        var data = $(this).data('id');
                        deleteCourse(data)
                        $(this).closest("tr").remove();
                    })
                } else {
                    alert('notSelected')
                }
                console.log(checked);
            })

            $btnView.on("click", function (e) {
                e.preventDefault();
                var $firstChecked = $Table.find("input[type='checkbox']:checked").first();

                var id = $firstChecked.data('id');
                window.location.replace("https://localhost:5001/Dashboard/Course/" + id)
            })

            //searching for courses
            $btnSearch.on("click", function (e) {
                e.preventDefault();
                var inputValue = $(this).parent().siblings().first().val().trim();

                if (inputValue != "") {
                    $.ajax({
                        type: "GET",
                        url: "https://localhost:44380/api/v1/courses/" + inputValue,
                        headers: { 'Authorization': 'Bearer ' + localStorage.getItem('token') },
                        contentType: "application/json",
                        dataType: "json",
                        success: function (data) {
                            console.log(data);
                            data.loopID = 1;
                            $Table.empty();

                            var dataElement = tableList(data);
                            $Table.append(dataElement);

                            $Table.find("input[type='checkbox']").on('click', function () {
                                if ($(this).prop("checked")) {
                                    if ($("input[type='checkbox']:checked").length == 1) {
                                        $btnView.prop('disabled', false);
                                    } else {
                                        $btnView.prop('disabled', true);
                                    }
                                    $btnDelete.prop('disabled', false);
                                } else {
                                    console.log($("input[type='checkbox']:checked").length)
                                    if ($("input[type='checkbox']:checked").length == 0) {
                                        $btnDelete.prop('disabled', true);
                                        $btnView.prop('disabled', true);
                                    }
                                    else if ($("input[type='checkbox']:checked").length == 1) {
                                        $btnView.prop('disabled', false);
                                    }
                                }

                            })
                        },
                        error: function (data) {
                            $Table.empty();
                            alert("Not Found")
                            console.log('bad')
                        }
                    });
                } else {
                    $Table.empty();
                    loadData();
                }

            })

            $('#btnLogout').on('click', function () {
                localStorage.removeItem('token');
                window.location.replace("https://localhost:5001/Login");
            })
        });
    </script>
