    <script>
        $(document).ready(function () {
            if (localStorage.getItem('token') == null) {
                window.location.replace("https://localhost:5001/Login")
            } 

            var $studentsTable = $("#tableItems");
            var $btnDelete = $("#btnDelete");
            var $btnView = $("#btnView");
            var students = [
                {
                    id: "1",
                    iterateid: "1",
                    firstName: "Gilbert",
                    lastName: "Adu",
                    course: "Psychology",
                    username: "KwameEMec",
                    dob: "April 18, 2017",
                    gender: "Male"
                }, 
                {
                    id: "2",
                    iterateid: "2",
                    firstName: "Gilbert",
                    lastName: "Adu",
                    course: "Psychology",
                    username: "KwameEMec",
                    dob: "April 18, 2017",
                    gender: "Male"
                },
                {
                    id: "3",
                    iterateid: "3",
                    firstName: "Gilbert",
                    lastName: "Adu",
                    course: "Psychology",
                    username: "KwameEMec",
                    dob: "April 18, 2017",
                    gender: "Male"
                },
            ]
            function tableList(data) {
                return data = "<tr>"
                    + "<td>" + data.iterateid+"</td>"
                    + "<td class='txt-oflo'>" + data.firstName+" "+data.lastName +"</td>"
                    + "<td>" + data.course + "</td>"
                    + "<td>" + data.username + "</td>"
                    + "<td class='txt-oflo'>" + data.dob +"</td>"
                    + "<td><span class='text-success'>" + data.gender +"</span></td>"
                    + "<td>"
                    + "<div class='custom-control custom-checkbox'>"
                    + "<input class='form-check-input position-static' type='checkbox' id='blankCheckbox' value='option1' aria-label='...' data-id='"+data.id+"'>"
                    + "</div>"
                    + "</td>"
                    + "</tr>";
            }

            $.each(students, function (key, value) {
                var data = tableList(value);
                $studentsTable.append(data);
            });

            $btnDelete.on("click", function (e) {
                e.preventDefault();
                var checked = $studentsTable.find("input[type='checkbox']:checked");
                if (checked.length > 0) {
                    checked.each(function () {
                        $(this).closest("tr").remove();
                    })
                } else {
                    alert('notSelected')
                } 
                console.log(checked);
            })

            $studentsTable.find("input[type='checkbox']").on('click', function () {
                if ($(this).prop("checked")) {
                    if ($("input[type='checkbox']:checked").length == 1) {
                        $btnView.prop('disabled', false);
                    } else {
                        $btnView.prop('disabled', true);
                    }
                    $btnDelete.prop('disabled', false);
                } else {
                    console.log($("input[type='checkbox']:checked").length)
                    if ($("input[type='checkbox']:checked").length == 0) {
                        $btnDelete.prop('disabled', true);
                        $btnView.prop('disabled', true);
                    }
                    else if ($("input[type='checkbox']:checked").length == 1) {
                        $btnView.prop('disabled', false);
                    }
                }

            })

            $btnView.on("click", function (e) {
                e.preventDefault();
                var $firstChecked = $studentsTable.find("input[type='checkbox']:checked").first();
                var id = $firstChecked.data('id');
                console.log(id);
                window.location.replace("https://localhost:5001/Dashboard/Student/"+id)
            })
        });
